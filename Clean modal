<script>
function goNav(ni) {
  const nav = document.getElementById('nav');
  const pill = document.getElementById('pill');

  nav.querySelectorAll('.ni').forEach(el => el.classList.remove('is-active'));
  ni.classList.add('is-active');

  fitPill();
}

function fitPill() {
  const nav = document.getElementById('nav');
  const pill = document.getElementById('pill');
  const active = nav.querySelector('.ni.is-active');
  if (!active || !pill) return;

  const nr = nav.getBoundingClientRect();
  const ar = active.getBoundingClientRect();
  pill.style.top = (ar.top - nr.top) + 'px';
  pill.style.width = '44px';
}

// Hover — pill follows
document.addEventListener('mouseover', (e) => {
  const ni = e.target.closest('.ni');
  if (!ni) return;
  const nav = ni.closest('.nav-col');
  const pill = nav?.querySelector('.pill');
  if (!pill) return;

  const label = ni.querySelector('.ni-label');
  const count = ni.querySelector('.ni-count');
  let totalW = 44;
  if (label) totalW += 8 + label.offsetWidth;
  if (count && count.textContent) totalW += 8 + count.offsetWidth;

  const nr = nav.getBoundingClientRect();
  const ar = ni.getBoundingClientRect();
  pill.style.top = (ar.top - nr.top) + 'px';
  pill.style.width = totalW + 'px';
});

document.addEventListener('mouseout', (e) => {
  const ni = e.target.closest('.ni');
  if (!ni) return;
  fitPill();
});

window.addEventListener('load', fitPill);
window.addEventListener('resize', fitPill);
</script>

</body>
