<script>
function go(clicked, navId, pillId) {
  const nav = document.getElementById(navId);
  const pill = document.getElementById(pillId);

  nav.querySelectorAll('.ni').forEach(el => el.classList.remove('is-active'));
  clicked.classList.add('is-active');

  fit(nav, pill);
}

function fit(nav, pill) {
  const active = nav.querySelector('.ni.is-active');
  if (!active || !pill) return;

  const nr = nav.getBoundingClientRect();
  const ar = active.getBoundingClientRect();

  pill.style.top = (ar.top - nr.top) + 'px';
  // Калюжка кругла на active без hover
  pill.style.width = '44px';
}

// Hover — калюжка росте
document.addEventListener('mouseover', (e) => {
  const ni = e.target.closest('.ni');
  if (!ni) return;
  const nav = ni.closest('.sidebar');
  const pill = nav.querySelector('.pill');
  if (!pill) return;

  // Чекаємо reflow для тексту
  requestAnimationFrame(() => {
    requestAnimationFrame(() => {
      const nr = nav.getBoundingClientRect();
      const ar = ni.getBoundingClientRect();
      pill.style.top = (ar.top - nr.top) + 'px';
      pill.style.width = ni.scrollWidth + 'px';
    });
  });
});

document.addEventListener('mouseout', (e) => {
  const ni = e.target.closest('.ni');
  if (!ni) return;
  const nav = ni.closest('.sidebar');
  const pill = nav.querySelector('.pill');
  if (!pill) return;

  // Повертаємо калюжку на active
  const active = nav.querySelector('.ni.is-active');
  if (!active) return;

  const nr = nav.getBoundingClientRect();
  const ar = active.getBoundingClientRect();
  pill.style.top = (ar.top - nr.top) + 'px';
  pill.style.width = '44px';
});

// Init
window.addEventListener('load', () => {
  [['nav1','pill1'],['nav2','pill2'],['nav3','pill3']].forEach(([nId, pId]) => {
    const nav = document.getElementById(nId);
    const pill = document.getElementById(pId);
    if (nav && pill) fit(nav, pill);
  });
});

window.addEventListener('resize', () => {
  [['nav1','pill1'],['nav2','pill2'],['nav3','pill3']].forEach(([nId, pId]) => {
    const nav = document.getElementById(nId);
    const pill = document.getElementById(pId);
    if (nav && pill) fit(nav, pill);
  });
});
</script>

